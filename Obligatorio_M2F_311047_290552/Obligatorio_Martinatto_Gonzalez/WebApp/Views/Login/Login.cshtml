@if (!String.IsNullOrEmpty(ViewBag.Mensaje))
{
    @if (ViewBag.Mensaje == "No tienes acceso")
    {
        <div class="alert alert-danger">
            @ViewBag.Mensaje
        </div>
    }
    else if (ViewBag.Mensaje == null) { }
    else
    {
        <div class="alert alert-success">
            @ViewBag.Mensaje
        </div>
    }
}
<style>
    a {
        display: inline !important;
        /* Add any additional styles as needed */
    }
</style>
<div class="cositoPaCenter">
    <div class="login-container">
        <form method="post">
            <div class="row mb-3">
                <label for="inputEmail3" class="col-sm-2 col-form-label">Email</label>
                <div class="col-sm-10">
                    <input type="email" class="form-control bg-dark text-white" id="Email" name="email" placeholder="email@email.com">
                </div>
            </div>
            <div class="row mb-3">
                <label for="inputPassword3" class="col-sm-2 col-form-label">Password</label>
                <div class="col-sm-10">
                    <input type="password" class="form-control bg-dark text-white" id="Password" name="password" placeholder="Contraseña">
                </div>
            </div>
            <div class="row mb-3" id="register">
                No eres miembro? <a href="~/Login/Register">Registrate</a>
            </div>
            <button type="submit" class="btn btn-primary bg-dark" value="Home">Login</button>
        </form>
    </div>
</div>